extends master.pug

block content
  div.container
    h1.title Add New User

    form(method="POST", action="/users")
      div.field
        label.label First Name
        div.control
          input.input(type="text", placeholder="John", name="first_name")

      div.field
        label.label Last Name
        div.control
          input.input(type="text", placeholder="Doe", name="last_name")

      div.field
        label.label Username
        div.control
          input.input(type="text", placeholder="Doe", name="username")

      div.field
        label.label Password
        div.control
          input.input(type="text", placeholder="Doe", name="password")

      button.button(type="submit") Submit