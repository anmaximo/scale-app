doctype html
html
  head
    title Student Profile
    style(type='text/css').
      body
      {
      background-image: url('public/pics/background.jpg');
       background: -webkit-linear-gradient(left top, rgb(255,255,255) 0%,rgb(2,254,254) 20%, rgb(1,201,177) 40%, rgb(0,66,55) 100%);
      background: -o-linear-gradient(bottom right, rgb(255,255,255) 0%,rgb(2,254,254) 20%, rgb(1,201,177) 40%, rgb(0,66,55) 100%);
      background: -moz-linear-gradient(bottom right, rgb(255,255,255) 0%,rgb(2,254,254) 20%, rgb(1,201,177) 40%, rgb(0,66,55) 100%);
      background: linear-gradient(to bottom right, rgb(255,255,255) 0%,rgb(2,254,254) 20%, rgb(1,201,177) 40%, rgb(0,66,55) 100%);
      display: flex;
      flex-direction: column;
      font-family: helvetica;
      }
      .top
      {
      display: flex;
      flex-direction: row;
      height: 75px;
      width: 99.5%;
      background-color: rgb(0,66,58);
      margin: -1vw 0 0 -1vw;
      padding: 1vw;
      }
      .top a
      {
      text-decoration: none;
      color: white;
      font-size: 30px;
      margin: auto;
      }
      .top a:hover
      {
      color:rgb(2,254,206);
      }
      .top img
      {
      height:175px;
      width: 175px;
      }
      .column
      {
      color: white;
      font-size: 30px;
      }
      .bottom
      {
      margin-top: 100px;
      text-align: center;
      color: white;
      display: flex;
      flex-direction: row;
      }
      .create
      {
      height:500px;
      width: 450px;
      background-color: rgb(0,66,58);
      margin: auto;
      display: flex;
      flex-direction: column;
      padding:0 10px 10px 10px;
      position: sticky;
      top: 0;
      }
      .title
      {
      margin-right: -150px;
      }
      .row
      {
      display: flex;
      flex-direction: row;
      font-size: 30px;
      }
      input[type="checkbox"]
      {
      margin: auto 10px auto auto;
      }
      input[type="text"]
      {
      width: 500px;
      height: 30px;
      border:none;
      font-family: Helvetica;
      text-align: center;
      font-size: 30px;
      border-bottom: 2px solid rgb(2,254,206);
      color: rgb(2,254,206);
      background: none;
      }

      input[type="date"]
      {
      width: 200px;
      height: 30px;
      border:none;
      margin:auto;
      font-family: Helvetica;
      text-align: center;
      font-size: 20px;
      border-bottom: 2px solid rgb(2,254,206);
      color: rgb(2,254,206);
      background: none;
      }

      input[type="number"]
      {
      width: 100px;
      height: 28px;
      border:none;
      margin:auto;
      font-family: Helvetica;
      text-align: center;
      font-size: 20px;
      border-bottom: 2px solid rgb(2,254,206);
      color: rgb(2,254,206);
      background: none;
      }

      textarea
      {
      margin: 20px 0 0 0;
      align-self: center;
      width: 500px;
      height: 150px;
      font-family: Helvetica;
      border:none;
      font-size: 20px;
      background: rgb(2,254,206);
      }
      button, input[type="submit"]
      {
      width: 200px;
      height: 50px;
      margin:auto;
      font-size: 20px;
      font-family: Helvetica;
      border:none;
      background: rgb(2,254,206);
      }
      .approved
      {
      width: 600px;
      text-align: center;
      }
      .approved_event
      {
      min-height:300px;
      width: 450px;
      background-color: rgb(0,66,58);
      margin: auto;
      display: flex;
      border-bottom:1px solid white;
      flex-direction: column;
      padding:0 10px 10px 10px;
      }
