      color: rgb(2,254,206);
      background: none;
      }
      textarea
      {
      margin: 20px 0 0 0;
      align-self: center;
      width: 500px;
      height: 150px;
      font-family: Helvetica;
      border:none;
      font-size: 20px;
      background: rgb(2,254,206);
      }
      button
      {
      width: 200px;
      height: 50px;
      margin:auto;
      font-size: 20px;
      font-family: Helvetica;
      border:none;
      background: rgb(2,254,206);
      }
      .approved
      {
      width: 600px;
      text-align: center;
      }
      .approved_event
      {
      min-height:400px;
      width: 450px;
      background-color: rgb(0,66,58);
      margin: auto;
      display: flex;
      flex-direction: column;
      padding:0 10px 10px 10px;
      }
