    style(type='text/css').
      body
      {
      height: 649px;
      background: linear-gradient(to top left,rgb(2,254,254) 20%, rgb(1,201,177) 40%, rgb(0,66,55) 100%);
      background: -webkit-linear-gradient(bottom right,rgb(2,254,254) 20%, rgb(1,201,177) 40%, rgb(0,66,55) 100%);
