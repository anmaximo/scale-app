      }
      .top
      {
      display: flex;
      flex-direction: row;
      height: 75px;
      width: 99.5%;
      background-color: rgb(0,66,58);
      margin: -1vw 0 0 -1vw;
      padding: 1vw;
      }
      .top a
      {
      text-decoration: none;
      color: white;
      font-size: 30px;
      margin: auto;
      }
      .top a:hover
      {
      color:rgb(2,254,206);
      }
      .top img
      {
      height:175px;
      width: 175px;
      }
      .column
      {
      color: white;
      font-size: 30px;
      }
      .bottom
      {
      margin-top: 100px;
      text-align: center;
      color: white;
      display: flex;
      flex-direction: row;
      }
      .create
      {
      height:500px;
      width: 450px;
      background-color: rgb(0,66,58);
      margin: auto;
      display: flex;
      flex-direction: column;
      padding:0 10px 10px 10px;
      }
      .title
      {
      margin-right: -150px;
      margin-top: -20px;
      }
      .row
      {
      display: flex;
      flex-direction: row;
      font-size: 30px;
      }
      input[type="radio"]
      {
      margin: auto 10px auto auto;
      }
      input[type="text"]
      {
      width: 500px;
      height: 30px;
      border:none;
      font-family: Helvetica;
      text-align: center;
      font-size: 30px;
      border-bottom: 2px solid rgb(2,254,206);
      color: rgb(2,254,206);
      background: none;
      }
      textarea
      {
      margin: 20px 0 0 0;
      align-self: center;
      width: 500px;
      height: 150px;
      font-family: Helvetica;
      border:none;
      font-size: 20px;
      background: rgb(2,254,206);
      }
      button
      {
      width: 200px;
      height: 50px;
      margin:auto;
      font-size: 20px;
      font-family: Helvetica;
      border:none;
      background: rgb(2,254,206);
      }
      .approved
      {
      width: 600px;
      text-align: center;
      }
      .approved_event
      {
      min-height:400px;
      width: 450px;
      background-color: rgb(0,66,58);
      margin: auto;
      display: flex;
      flex-direction: column;
      padding:0 10px 10px 10px;
      }
      table
      {
      width: 1325px;
      margin: auto auto auto 5px;
      background-color: rgba(0,0,0,.5);
      }
      th
      {
      border:1px solid white;
      }
      tr
      {
      border-left:1px solid white;
      }
      ul, li
      {
      text-decoration: none;
      list-style: none;
      margin-left: -20px;
      }
